<table class="attr">
<%= form_for @entry do |form| %>
<br>写真</br>
<%= form.fields_for :picture do |imgf| %>
<tr>
  <th><%= imgf.label :uploaded_picture %></th>
  <td>
    <%= imgf.file_field :uploaded_picture %>
    <if !imgf.object.new_record? && imgf.object.errors.empty? %>
      <div>
        <%= entry_picture_tag @entry, width: 60 %>
        <%= imgf.check_box :_destroy %>
        <%= imgf.label :_destory %>
        <%= imgf.hidden_field :id %>
      </div>
      <% end %>
    </td>
</tr>

<br>投稿ナンバー</br>
<%= form.text_field :entrynumber %>

<br>指標テンプレート</br>
<%= form.text_field :scale_templatenumber %>


<br>コメント</br>
<%= form.text_area :comment, cols: 40, rows: 6%>
<tr>
<br>投稿日</br>
<%= form.date_select :entrydate%>
</tr>
<br>
<% options = ["1","2","3","4","5"] %>
苦味 <%= form.select :value1, options %>
香り <%= form.select :value2, options %>
酸味 <%= form.select :value3, options %>
コク <%= form.select :value4, options %>
</br>
<p><%= form.submit %></P>
<% end %>
